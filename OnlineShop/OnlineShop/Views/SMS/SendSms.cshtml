
@{
    ViewData["Title"] = "Posalji poruku administratoru";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model SendSmsVM

<style>

    #formaSms{
        width:35%;
        margin:auto;
        margin-top:80px;
        padding:15px;
        border-radius: 25px;
        border: 10px solid #7E191B;
        
    }
    #l1{
        padding:5px;
    }

</style>


    <form id="formaSms" method="post" class="text-danger bg-dark text-center">
        <h3 class="font-weight-bold text-center">Pošalji sms administratoru</h3>
        <div class="form-group text-center">
            <input asp-for="Id" hidden/>
            <label id="l1">Tekst poruke:</label><input asp-for="Text" class="form-control" />
        </div>
        <div class="form-group text-center">
            <label class="text-info">Broj telefona:</label><input class="text-center bg-transparent border-0 text-info" asp-for="PhoneNumber" readonly/>
        </div>
        <button type="submit" class="btn btn-success">Pošalji</button>
    </form>
