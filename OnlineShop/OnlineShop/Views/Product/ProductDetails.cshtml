@using OnlineShop.ViewModels

@model ProductDetailsVM
@{
    ViewData["Title"] = "ProductDetails";
    //var photoPath = "~/images/" + (Model.Image);
   

}


<style>
    #mainDiv{
        height:520px;
        border:1px solid black;
        background-color:red;
        margin:auto;
    }

    #leftDiv{
        background-color:gray;
        float:left;
        height:520px;
        width:50%;
    }
    
    #rightDiv{
        background-color:yellow;
        float:left;
        height:520px;
        width:50%;
    }

    #title {
        background-color:aqua;
        width:100%;
        height:120px;
    }

    #rightContent{
        width:100%;
        height:250px;
        background-color:bisque;
    }

    #rightFooter{

    }

    #imagediv2{
        width:70%;
        height:60%;
        background-color:white;
        margin:50px;
    }

    #picture{
         max-width: 100%;
        max-height: 100%;
        height: auto;
        width: auto\9;
        object-fit: cover;
    }

</style>



<div id="mainDiv">
    <div id="leftDiv">
        <div id="imagediv2">
            <img id="picture" src="~/images/@(Model.ImageUrl)" />

        </div>
        @*<img src="/partners@(item.AdPath)" alt="" id="adimg"
             title="@item.AdName" width:"50px" height="50px" />*@
    </div>
        <div id="rightDiv">
            <div id="title">

                <h1>@Model.ProductName</h1>
                <h4>Proizvođač : @Model.ManufacturerName</h4>
                <p>Ime podkategorije : @Model.SubCategoryName</p>
                
                
            </div>
            <div id="rightContent">
                ovdje detaljan opis
                @Model.Description
                na stanju
            </div>
            <div id="rightFooter">

                <p>Cijena: @Model.UnitPrice KM</p>

                DODAJ U KORPU

            </div>
        </div>
</div>






