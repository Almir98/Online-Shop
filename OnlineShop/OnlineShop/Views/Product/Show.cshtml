@using OnlineShopPodaci.Model;

@model OnlineShop.ViewModels.SohwProductForManageLIST

@{
    ViewData["Title"] = "Show";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Prikaz svih proizvoda</h1>

<table class="table table-striped">
    <tr>
        <th>Broj proizvoda</th>
        <th>Naziv podkategorije</th>
        <th>Naziv proizvodjaca</th>
        <th>Naziv proizvoda</th>
        <th>Opis</th>
        <th>Cijena</th>
    </tr>

    @foreach (var p in Model.ListOfProducts)
    {
        <tr>
            <td>@p.ProductNumber</td>
            <td>@p.SubCategoryName</td>
            <td>@p.ManufacturerName</td>
            <td>@p.ProductName</td>
            <td>@p.Description</td>
            <td>@p.UnitPrice</td>
            <td>
                <a class="btn btn-warning" href="/Product/AddProduct?ProductID=@p.ProductID">Izmjeni</a>
            </td>
        </tr>
    }
</table>
<br />
