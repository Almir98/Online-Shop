
@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<br />
<h3>Nova podkategorija</h3>
<br />

@model AddSubCategoryVM

<form enctype="multipart/form-data" asp-action="SaveSubCategory">

    <div class="form-group">
        <label>Kategorija :</label>
        <select asp-for="categoryID" asp-items="@Model._lista" class="form-control" required>
            <option>Odaberite kategoriju</option>
        </select>
        <span asp-validation-for="categoryID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Naziv podkategorije :</label>
        <input asp-for="subcategoryName" class="form-control" required />
        <span asp-validation-for="subcategoryName" class="text-danger"></span>
    </div>

    <p>URL slike:</p>
    <div class="custom-file">
        <input asp-for="Image" class="form-control custom-file-input" /><br />

        <label class="custom-file-label">Izaberi sliku</label>
    </div>

    <br /><br />

    <input type="submit" value="Sačuvaj" class="btn btn-primary" />
</form>