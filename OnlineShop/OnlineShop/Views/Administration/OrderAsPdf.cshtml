                                         <input type="text" class="signature" style="width:20%; border:0;border-bottom: 1px solid #000;" />
                                         <br />
                                         <p1> Narudžbu zaključio</p1>  <p1 style="float:right;">@DateTime.Now.ToShortDateString()</p1>


                                     </div>





